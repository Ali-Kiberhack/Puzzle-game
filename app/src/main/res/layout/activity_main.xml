<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:backgroundTint="@null"
    android:background="@drawable/game2"
    tools:context=".MainActivity">

<ImageView
    android:id="@+id/iconShuflle"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="20dp"
    android:src="@drawable/ic_baseline_replay_24"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

    <ImageView
        android:id="@+id/home"
        android:layout_alignStart="@+id/iconShuflle"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_baseline_home_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <Chronometer
        android:id="@+id/chronometer"
        android:layout_above="@+id/grid_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<LinearLayout
    android:id="@+id/playerContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player:"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/textPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        />

</LinearLayout>

    <LinearLayout

        android:id="@+id/movementContainer"
        android:layout_below="@+id/playerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moves:"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/textMoves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAUSED"
        android:textSize="14sp"
        android:layout_below="@+id/movementContainer"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:backgroundTint="@null"
        android:background="@drawable/btn_theme"
        />

    <GridLayout
        android:id="@+id/grid_container"
        android:layout_margin="30dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <Button
            android:id="@+id/btn1"
            android:tag="00"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn2"
            android:tag="01"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn3"
            android:tag="02"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn4"
            android:tag="03"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />






        <Button
            android:id="@+id/btn5"
            android:tag="10"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />

        <Button
            android:id="@+id/btn6"
            android:tag="11"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />

        <Button
            android:id="@+id/btn7"
            android:tag="12"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />

        <Button
            android:id="@+id/btn8"
            android:tag="13"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />




        <Button
            android:id="@+id/btn9"
            android:tag="20"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />

        <Button
            android:id="@+id/btn10"
            android:tag="21"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />

        <Button
            android:id="@+id/btn11"
            android:tag="22"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />

        <Button
            android:id="@+id/btn12"
            android:tag="23"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />






        <Button
            android:id="@+id/btn13"
            android:tag="30"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />

        <Button
            android:id="@+id/btn14"
            android:tag="31"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />

        <Button
            android:id="@+id/btn15"
            android:tag="32"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />

        <Button
            android:id="@+id/btn16"
            android:tag="33"
            android:onClick="click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/btn6"
            />




    </GridLayout>

    <LinearLayout
        android:id="@+id/pauseOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:layout_column="1"
        android:background="#A3DCEDC9"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAUSED"
            android:textColor="#F18006"
            android:textSize="48sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_theme"
            android:text="RESUME"
            android:textSize="14sp"
            app:backgroundTint="@null" />

    </LinearLayout>

</RelativeLayout>